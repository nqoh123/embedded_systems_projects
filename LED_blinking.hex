#include <Reg51.h>  
void delay(unsigned int time) {
    unsigned int i, j;
    for (i = 0; i < time; i++) {
        for (j = 0; j < 1275; j++); 
    }
}
void main() {
    while (1) {         
        P0 = 0xFF;   // LEDs ON
        delay(500);
        P0 = 0x00;   // LEDs OFF
        delay(500);

    }
}

